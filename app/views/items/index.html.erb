<div class="row-header">
  <h3>
    Appetizers
  </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Amount</th>
        <th>Units</th>
        <th>Serving size</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>

      <% @appetizers.each do |appetizer| %>
      <tr>
        <td><%= appetizer.name %></td>
        <td><%= appetizer.amount %></td>
        <td><%= appetizer.units %></td>
        <td><%= appetizer.serving_size %></td>
        <td><%= number_to_currency(appetizer.price) %></td>
        <td>
          <a href="/items/<%= appetizer.id %>" class="btn btn-primary">Show</a>
          <a href="/items/<%= appetizer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_item/<%= appetizer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

