<div class="page-header">
  <h1>
    Guests
    <a href="/guests/new" class="btn btn-lg btn-success">New Guest</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Party</th>
        <th>Item</th>
        <th>Actions</th>
      </tr>

      <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.party.firstname%> <%= guest.party.lastname</td>
        <td><%= guest.party.email %></td>
        <td><%= guest.party.gender %></td>
        <td><%= guest.party.name %></td>
        <td><%= guest.item.name %></td>
        <td>
          <a href="/guests/<%= guest.id %>" class="btn btn-primary">Show</a>
          <a href="/guests/<%= guest.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_guest/<%= guest.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
