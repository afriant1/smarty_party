<!-- Validation failure messages -->
<% if @party.errors.any? %>
  <% @party.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit <%= @party.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_party/<%= @party.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @party.name %>">
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @party.date %>">
      </div>

      <!-- Label and input for duration -->
      <div class="form-group">
        <label for="duration" class="control-label">
          Duration in hours
        </label>

        <input type="text" id="duration" name="duration" placeholder="Duration" class="form-control" value="<%= @party.duration %>">
      </div>

      <!-- Label and input for male_count -->
      <div class="form-group">
        <label for="male_count" class="control-label">
          Number of Male Guests
        </label>

        <input type="text" id="male_count" name="male_count" placeholder="Male count" class="form-control" value="<%= @party.male_count %>">
      </div>

      <!-- Label and input for female_count -->
      <div class="form-group">
        <label for="female_count" class="control-label">
          Number of Female Guests
        </label>

        <input type="text" id="female_count" name="female_count" placeholder="Female count" class="form-control" value="<%= @party.female_count %>">
      </div>

      <!-- Label and input for food_level -->
      <div class="form-group">
        <label for="food_level" class="control-label">
          Food level (up to 5)
        </label>

        <input type="text" id="food_level" name="food_level" placeholder="Food level" class="form-control" value="<%= @party.food_level %>">
      </div>

      <!-- Label and input for drink_level -->
      <div class="form-group">
        <label for="drink_level" class="control-label">
          Drink level (up to 5)
        </label>

        <input type="text" id="drink_level" name="drink_level" placeholder="Drink level" class="form-control" value="<%= @party.drink_level %>">
      </div>

      <!-- Label and input for budget -->
      <div class="form-group">
        <label for="budget" class="control-label">
          Budget
        </label>

        <input type="text" id="budget" name="budget" placeholder="Budget" class="form-control" value="<%= @party.budget %>">
      </div>

      <!-- Label and input for courses -->
      <div class="form-group">
        <label for="courses" class="control-label">
          Courses
        </label>
      </div>

    <input type="hidden" id="appetizer_course" name="appetizer_course" value ="0">
    <input type="hidden" id="entree_course" name="entree_course" value ="0">
    <input type="hidden" id="dessert_course" name="dessert_course" value ="0">
    <input type="hidden" id="alcohol_course" name="alcohol_course" value ="0">

<div class="row">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>Appetizer</th>
        <th>Entree</th>
        <th>Dessert</th>
        <th>Alcohol</th>
      </tr>
      <tr>
        <td> <%= select_tag :appetizer_course, options_for_select([["Yes", 1], ["No", 0]], @party.appetizer_course), :class => "form-control" %></td>
        <td> <%= select_tag :entree_course, options_for_select([["Yes", 1], ["No", 0]], @party.entree_course), :class => "form-control" %></td>
        <td> <%= select_tag :dessert_course, options_for_select([["Yes", 1], ["No", 0]], @party.dessert_course), :class => "form-control" %></td>
         <td> <%= select_tag :alcohol_course, options_for_select([["Yes", 1], ["No", 0]], @party.alcohol_course), :class => "form-control" %></td>
      </tr>
    </table>
  </div>
</div>
<p></p>
  </div>


 <div class="form-group">
  <div class="col-md-12">
       <button class="btn btn-warning">
        Update Party
      </button>
      or
      <a href="/parties/<%= @party.id %>">Cancel</a>
    </form>
 </div>
 </div>
  </div>
</div>
