        <% end %>

        <%= number_to_currency(total.to_i-@party.budget) %></dd>
      </dd>
    </dl>
  </div>
</div>

    <div class="btn-group btn-group-justified">
      <a href="/parties" class="btn btn-primary">
        Back
      </a>
      <a href="/parties/<%= @party.id %>/edit" class="btn btn-warning">
