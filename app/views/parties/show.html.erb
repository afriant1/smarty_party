<div class="page-header">
  <h3><%= @party.name %></h3>
</div>

<div class="page-header">
  <h4>Party Profile</h4>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Date</dt>
      <dd><%= @party.date %></dd>

      <dt>Duration</dt>
      <dd><%= @party.duration %> hours</dd>

      <dt>Food level</dt>
      <dd><%= @party.food_level %></dd>

      <dt>Drink level</dt>
      <dd><%= @party.drink_level %></dd>

      <dt>Male count</dt>
      <dd><%= @party.male_count %></dd>

      <dt>Female count</dt>
      <dd><%= @party.female_count %></dd>

      <dt>Budget</dt>
      <dd><%= number_to_currency(@party.budget) %></dd>

      <dt>Appetizer</dt>
      <dd><%= @party.appetizer_course %></dd>

      <dt>Entree</dt>
      <dd><%= @party.entree_course %></dd>

      <dt>Dessert</dt>
      <dd><%= @party.dessert_course %></dd>

      <dt>Alcohol</dt>
      <dd><%= @party.alcohol_course %></dd>

    </dl>

<div class="page-header">
  <h4>Food & Drink Needs</h4>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Appetizers</dt>
      <dd><%= @appetizer_calc%> pieces</dd>

      <dt>Entrees</dt>
      <dd><%=@entree_calc%> meals</dd>

      <dt>Desserts</dt>
      <dd><%= @dessert_calc%> pieces</dd>

      <dt>Non-Alcohol</dt>
      <dd><%= @nonalcohol_calc%> drinks</dd>

      <dt>Alcohol</dt>
      <dd><%= @alcohol_calc%> drinks</dd>

      <dt>Flatware</dt>
      <dd><%= @flatware_calc%> sets</dd>
    </dl>
  </div>
 </div>

<div class="page-header">
  <h4>Food & Drink Totals from Shopping list</h4>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Appetizers</dt>
      <dd>
        <%= @party.total_servings('Appetizer')%> pieces
      </dd>

      <dt>Entrees</dt>
      <dd>
        <%= @party.total_servings('Entree')%> meals</dd>

      <dt>Desserts</dt>
      <dd>
        <%= @party.total_servings('Dessert')%> pieces</dd>

      <dt>Non-Alcohol</dt>
      <dd>
      <%= @party.total_servings('Non-Alcohol')%> drinks</dd>

      <dt>Alcohol</dt>
      <dd>
      <%= @party.total_servings('Alcohol')%> drinks</dd>

      <dt>Flatware</dt>
      <dd>
      <%= @party.total_servings('Flatware')%> sets</dd>

      <dt>Total Cost</dt>
      <dd>
      <%= number_to_currency(@party.total_cost)%></dd>
    </dl>
  </div>
 </div>

<div class="page-header">
  <h4>Comparison</h4>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Appetizers</dt>
      <dd>
        <%= @party.comparison('Appetizer', @appetizer_calc)%> drinks (<%= @party.comparison_sign('Appetizer', @appetizer_calc) %>)
      </dd>

      <dt>Entrees</dt>
      <dd>
        <%= @party.comparison('Entree', @entree_calc) %> meals (<%= @party.comparison_sign('Entree', @entree_calc) %>)
      </dd>

      <dt>Desserts</dt>
      <dd>
        <%= @party.comparison('Dessert', @dessert_calc) %> pieces (<%= @party.comparison_sign('Dessert', @dessert_calc) %>)
      </dd>

      <dt>Non-Alcohol</dt>
      <dd>
        <%= @party.comparison('Non-alcohol', @nonalcohol_calc) %> drinks (<%= @party.comparison_sign('Non-alcohol', @nonalcohol_calc) %>)
      </dd>

      <dt>Alcohol</dt>
      <dd>
        <%= @party.comparison('Alcohol', @alcohol_calc) %> drinks (<%= @party.comparison_sign('Alcohol', @alcohol_calc) %>)
      </dd>

      <dt>Flatware</dt>
      <dd>
        <%= @party.comparison('Flatware', @flatware_calc) %> sets (<%= @party.comparison_sign('Flatware', @flatware_calc) %>)
      </dd>

      <dt>Budget</dt>
      <dd>
        <%= number_to_currency(@party.total_cost - @party.budget) %> (<%= @party.comparison_sign(@party.total_cost, @party.budget) %>)
      </dd>
      </dd>
    </dl>
  </div>
</div>

    <div class="btn-group btn-group-justified">
      <a href="/parties" class="btn btn-primary">
        Back
      </a>
      <a href="/parties/<%= @party.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_party/<%= @party.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
