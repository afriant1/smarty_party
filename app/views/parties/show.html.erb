<div class="page-header">
  <h3><%= @party.name %></h3>
</div>

<div class="page-header">
  <h4>Party Profile</h4>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Date</dt>
      <dd><%= @party.date %></dd>

      <dt>Duration</dt>
      <dd><%= @party.duration %> hours</dd>

      <dt>Food level</dt>
      <dd><%= @party.food_level %></dd>

      <dt>Drink level</dt>
      <dd><%= @party.drink_level %></dd>

      <dt>Male count</dt>
      <dd><%= @party.male_count %></dd>

      <dt>Female count</dt>
      <dd><%= @party.female_count %></dd>

      <dt>Budget</dt>
      <dd><%= number_to_currency(@party.budget) %></dd>

      <dt>Appetizer</dt>
      <dd><%= @party.appetizer_course %></dd>

      <dt>Entree</dt>
      <dd><%= @party.entree_course %></dd>

      <dt>Dessert</dt>
      <dd><%= @party.dessert_course %></dd>

      <dt>Alcohol</dt>
      <dd><%= @party.alcohol_course %></dd>

    </dl>

<div class="page-header">
  <h4>Food & Drink Needs</h4>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Appetizers</dt>
      <dd><%= @appetizer_calc%> pieces</dd>

      <dt>Entrees</dt>
      <dd><%=@entree_calc%> meals</dd>

      <dt>Desserts</dt>
      <dd><%= @dessert_calc%> pieces</dd>

      <dt>Non-Alcohol</dt>
      <dd><%= @nonalcohol_calc%> drinks</dd>

      <dt>Alcohol</dt>
      <dd><%= @alcohol_calc%> drinks</dd>

      <dt>Flatware</dt>
      <dd><%= @flatware_calc%> sets</dd>
    </dl>
  </div>
 </div>

<div class="page-header">
  <h4>Food & Drink Totals from Shopping list</h4>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Appetizers</dt>
      <dd>2 pieces</dd>

      <dt>Entrees</dt>
      <dd>2 meals</dd>

      <dt>Desserts</dt>
      <dd>2 pieces</dd>

      <dt>Non-Alcohol</dt>
      <dd>2 drinks</dd>

      <dt>Alcohol</dt>
      <dd>2 drinks</dd>

      <dt>Flatware</dt>
      <dd>2 sets</dd>

      <dt>Budget</dt>
      <dd>400</dd>
    </dl>
  </div>
 </div>


    <div class="btn-group btn-group-justified">
      <a href="/parties" class="btn btn-primary">
        Back
      </a>
      <a href="/parties/<%= @party.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_party/<%= @party.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
