<!-- Validation failure messages -->
<% if @shopping_list.errors.any? %>
  <% @shopping_list.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add to Shopping List</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_shopping_list" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for item_id -->
      <div class="form-group">
        <label for="item_id" class="control-label">
          Item
        </label>

        <%= select_tag :item_id, options_from_collection_for_select(Item.all, :id, :name, @shopping_list.item_id), :class => "form-control" %>

      </div>

      <!-- Label and input for party_id -->
      <div class="form-group">
        <label for="party_id" class="control-label">
          Party
        </label>

        <input type="text" id="party_id" name="party_id" class="form-control" value="<%= @shopping_list.party_id %>">
      </div>

      <!-- Label and input for quantity -->
      <div class="form-group">
        <label for="quantity" class="control-label">
          Quantity
        </label>

        <input type="text" id="quantity" name="quantity" placeholder="quantity" class="form-control" value="<%= @shopping_list.quantity %>">
      </div>

      <!-- Label and input for delegation_status -->
      <div class="form-group">
        <label for="delegation_status" class="control-label">
          Delegation status
        </label>

        <input type="text" id="delegation_status" name="delegation_status" placeholder="Delegation status" class="form-control" value="<%= @shopping_list.delegation_status %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @shopping_list.user_id %>">
      </div>

      <!-- Label and input for notes -->
      <div class="form-group">
        <label for="notes" class="control-label">
          Notes
        </label>

        <input type="text" id="notes" name="notes" placeholder="Notes" class="form-control" value="<%= @shopping_list.notes %>">
      </div>

      <button class="btn btn-success">
        Create item
      </button>
      or
      <a href="parties/<%=shopping_list.party_id=>/shopping_lists">Cancel</a>
    </form>
  </div>
</div>
