<div class="page-header">
  <h1>
    Shopping lists
    <a href="/shopping_lists/new" class="btn btn-lg btn-success">New Shopping list</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Item</th>
        <th>Party</th>
        <th>Servings</th>
        <th>Serving price</th>
        <th>Delegation status</th>
        <th>User</th>
        <th>Completion status</th>
        <th>Actions</th>
      </tr>

      <% @shopping_lists.each do |shopping_list| %>
      <tr>
        <td><%= shopping_list.item_id %></td>
        <td><%= shopping_list.party_id %></td>
        <td><%= shopping_list.servings %></td>
        <td><%= shopping_list.serving_price %></td>
        <td><%= shopping_list.delegation_status %></td>
        <td><%= shopping_list.user_id %></td>
        <td><%= shopping_list.completion_status %></td>
        <td>
          <a href="/shopping_lists/<%= shopping_list.id %>" class="btn btn-primary">Show</a>
          <a href="/shopping_lists/<%= shopping_list.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_shopping_list/<%= shopping_list.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
