<div class="page-header">
  <h1>
  <%= @party.name %> Shopping list
    <a href="/parties/<%= @party.id %>/shopping_lists/new" class="btn btn btn-success">Add New Item</a>
    <a href="/parties/<%= @party.id %>" class="btn btn-primary">Party Profile</a>

  </h1>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Category</th>
        <th>Item</th>
        <th>Purchase Unit</th>
        <th>Servings</th>
        <th>Item price</th>
        <th>Quantity</th>
        <th>Total Servings</th>
        <th>Total Cost</th>
        <th>Delegation</th>
        <th>Owner</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @party_request_lists.each do |party_request_list| %>
      <tr>
        <td><%= party_request_list.item.category %></td>
        <td><%= party_request_list.item.name %></td>
        <td><%= party_request_list.item.amount %> <%= party_request_list.item.units %></td>
        <td><%= party_request_list.item.serving_size.to_i %></td>
        <td><%= number_to_currency(party_request_list.item.price) %></td>
        <td><%= party_request_list.quantity %></td>
        <td><%= party_request_list.quantity.to_i*party_request_list.item.serving_size.to_i %></td>
        <td><%= number_to_currency(party_request_list.item.price*party_request_list.quantity.to_i) %></td>
        <td><%= party_request_list.delegation_status %></td>
        <td><%= party_request_list.owner %></td>
        <td><%= party_request_list.notes %></td>
        <td><span>
          <a class="btn btn-warning" href="/shopping_lists/<%= party_request_list.id %>/edit"><i class="fa fa-edit"></i></a>
          <a class="btn btn-danger" rel="nofollow" data-method="delete" href="<%= party_request_list.id %>"><i class="fa fa-trash-o"></i></a>
        </td></span>
      </tr>
      <% end %>
    </table>
  </div>
</div>
